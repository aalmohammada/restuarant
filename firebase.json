{
    "hosting": {
        "public": "public_html",
        "ignore": [
            "firebase.json",
            "**/.*"
        ],
        "rewrites": [
            {
                "source": "/menu{,/}",
                "destination": "/menu/index.html"
            },
            {
                "source": "/contact{,/}",
                "destination": "/contact/index.html"
            },
            {
                "source": "/book-table{,/}",
                "destination": "/book-table/index.html"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "cleanUrls": true,
        "trailingSlash": false
    }
}